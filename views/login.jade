extends layouts/session

block content
  form.signin-panel(action='/login', method="post")
     span.heading Đăng nhập eds <br />
        extra() Đại lý
     .signin-wrap
        .message #{message}
        .signin-inputs
           input(name="email", type="text", placeholder="địa chỉ email")#email
           input(name="password", type="password", placeholder="mật khẩu")#password
        .signin-buttons
           label.checkbox
              input(type="checkbox")
              | Nhớ tài khoản
              span.right-float
                a(href="#") Quên mật khẩu?
           button.signin-button(type="submit") ĐĂNG NHẬP!
     .registration.right-float
       | Chưa có tài khoản?
       a(href="/signup")  Đăng ký ngay!